{
  "build": {
    "beforeDevCommand": "pnpm sidecar && pnpm dev",
    "beforeBuildCommand": "pnpm sidecar && pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "demo-alpha"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "longDescription": "This package is a simple Tauri demonstration project.\n\nIt shows multiple Tauri features.",
      "targets": "all",
      "identifier": "io.github.olivierlemasle.tauri.demo-alpha",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["../bin/demo-sidecar"],
      "resources": ["../*.md"],
      "deb": {
        "depends": ["iptables"],
        "files": {
          "/usr/share/doc/demo-alpha/copyright": "../LICENSE"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "demo-alpha",
        "width": 800,
        "height": 600
      }
    ]
  },
  "plugins": {
    "shell": {
      "scope": [{ "name": "../bin/demo-sidecar", "sidecar": true }]
    }
  }
}
